rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function isAdmin() {
      return isAuthenticated() && 
        (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin' ||
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'superadmin');
    }

    function isTrainer() {
      return isAuthenticated() && 
        (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'trainer' ||
         isAdmin());
    }

    // Users collection
    match /users/{userId} {
      allow read: if isAuthenticated() && (isOwner(userId) || isTrainer());
      allow create: if isAuthenticated(); // Allow users to create their own profile on signup
      allow update: if isAuthenticated() && (isOwner(userId) || isAdmin());
      allow delete: if isAdmin();
    }

    // Gyms collection
    match /gyms/{gymId} {
      allow read: if true; // Public for branding/login info
      allow write: if isAdmin();
    }

    // Routines collection
    match /routines/{routineId} {
      allow read: if isAuthenticated() && (resource.data.memberId == request.auth.uid || isTrainer());
      allow write: if isTrainer();
    }

    // Plans (Nutrition) collection
    match /plans/{planId} {
      allow read: if isAuthenticated() && (resource.data.memberId == request.auth.uid || isTrainer());
      allow write: if isTrainer();
    }

    // Classes collection
    match /classes/{classId} {
      allow read: if isAuthenticated();
      allow write: if isTrainer();
    }

    // Progress collection
    match /progress/{progressId} {
      allow read: if isAuthenticated() && (resource.data.memberId == request.auth.uid || isTrainer());
      allow create: if isAuthenticated() && request.resource.data.memberId == request.auth.uid;
      allow update: if isAuthenticated() && (resource.data.memberId == request.auth.uid || isTrainer());
      allow delete: if isAdmin();
    }
  }
}
